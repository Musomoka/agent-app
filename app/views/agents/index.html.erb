<div class="bg-gray-50 min-h-screen py-8">
  <div class="container mx-auto px-4">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-4xl font-bold text-gray-800 mb-2">Agents</h1>
          <p class="text-gray-600">Connect with professional travel agents</p>
        </div>
        <%= link_to 'New Agent', new_agent_path, class: "bg-orange-600 hover:bg-orange-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors shadow-lg" %>
      </div>
    </div>

    <% if notice %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
        <%= notice %>
      </div>
    <% end %>

    <!-- Grid Container -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @agents.each do |agent| %>
        <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden">
          <!-- Image/Icon Section -->
          <div class="h-48 bg-gradient-to-br from-orange-500 to-red-500 relative">
            <div class="absolute inset-0 flex items-center justify-center">
              <i class="fas fa-user-tie text-white text-6xl"></i>
            </div>
            <div class="absolute top-4 right-4">
              <span class="bg-white bg-opacity-20 text-white px-3 py-1 rounded-full text-sm font-semibold">
                Agent
              </span>
            </div>
          </div>
          
          <!-- Content Section -->
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-2"><%= agent.name %></h3>
            <p class="text-gray-600 mb-4 line-clamp-3"><%= agent.description %></p>
            
            <!-- Agent Details -->
            <div class="space-y-3 mb-4">
              <div class="flex items-center space-x-2">
                <i class="fas fa-map-marker-alt text-orange-500 w-4"></i>
                <span class="text-sm text-gray-700">
                  <% if agent.location.present? %>
                    <%= agent.location %>
                  <% else %>
                    <span class="text-gray-400">Location not specified</span>
                  <% end %>
                </span>
              </div>
              
              <div class="flex items-center space-x-2">
                <i class="fas fa-phone text-orange-500 w-4"></i>
                <span class="text-sm text-gray-700">
                  <% if agent.contact.present? %>
                    <%= agent.contact %>
                  <% else %>
                    <span class="text-gray-400">Contact not provided</span>
                  <% end %>
                </span>
              </div>
              
              <div class="flex items-start space-x-2">
                <i class="fas fa-concierge-bell text-orange-500 w-4 mt-1"></i>
                <div class="flex-1">
                  <span class="text-sm font-semibold text-gray-700">Services:</span>
                  <div class="text-sm text-gray-600 mt-1">
                    <% if agent.services.present? %>
                      <% agent.services.split("\n").first(2).each do |service| %>
                        <span class="inline-block bg-orange-100 text-orange-800 px-2 py-1 rounded text-xs mr-1 mb-1">
                          <%= service.strip %>
                        </span>
                      <% end %>
                      <% if agent.services.split("\n").length > 2 %>
                        <span class="text-orange-600 text-xs">+<%= agent.services.split("\n").length - 2 %> more</span>
                      <% end %>
                    <% else %>
                      <span class="text-gray-400">No services listed</span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="flex space-x-2">
              <%= link_to 'View Details', agent, class: "flex-1 bg-orange-600 hover:bg-orange-700 text-white py-2 px-4 rounded-lg font-semibold text-center transition-colors" %>
              <%= link_to 'Edit', edit_agent_path(agent), class: "bg-gray-200 hover:bg-gray-300 text-gray-800 py-2 px-4 rounded-lg font-semibold transition-colors" %>
            </div>
          </div>
        </div>
      <% end %>

      <% if @agents.empty? %>
        <!-- Empty State -->
        <div class="col-span-full flex flex-col items-center justify-center py-16">
          <i class="fas fa-user-tie text-gray-300 text-6xl mb-4"></i>
          <h3 class="text-xl font-semibold text-gray-600 mb-2">No agents registered</h3>
          <p class="text-gray-500 mb-6">Add your first travel agent to get started</p>
          <%= link_to 'Add First Agent', new_agent_path, class: "bg-orange-600 hover:bg-orange-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</table>

